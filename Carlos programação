function Pares(array) {
      let contador = 0; 

    for (let i = 0; i < array.length; i++) {
         if (array[i] % 2 === 0) {
              contador++; 
        }
    }
    console.log(Pares(numeros));

     return contador; 
}

//exercicio 4

function Media (array) {
    if (array.length === 0 ) {
        return 0;
    }

    let soma = 0; 

    for (let i = 0; i < array.length; i++ ) {
        soma += array[i]; 
    }

    return soma / array.length; 
}


console.log( Media (numeros));

//exercicio 5

function contarpositivosnegativos(array) {
    let positivos = 0;
    let negativos = 0;

    for (let numero of array) {
        if (numero >= 0) {
            positivos++;
        } else {
            negativos++;
        }
    }

    console.log(`Números positivos: ${positivos}`);
    console.log(`Números negativos: ${negativos}`);
}


const novoArray = [3, -1, 0, 7, -5, 2, -3];
contarpositivosnegativos(novoArray);

